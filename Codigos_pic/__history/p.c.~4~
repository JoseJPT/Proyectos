#include <16f877a.h>
#fuses HS, NOWDT
#use delay(clock=20M)

// Declaración de funciones para las acciones del robot
void ADELANTE();
void IZQUIERDA();
void DERECHA();
void ALTO();

int main() 
{
    do {
        if (input(PIN_B0) == 1 && input(PIN_B1) == 1 && input(PIN_B2) == 1) {
            ALTO();
        }  
        
        else if (input(PIN_B0) == 1 && input(PIN_B1) == 1 && input(PIN_B2) == 0) {
            IZQUIERDA();
        }
        
        else if (input(PIN_B0) == 0 && input(PIN_B1) == 1 && input(PIN_B2) == 0) {
            IZQUIERDA();
        } 
        
        else if (input(PIN_B0) == 1 && input(PIN_B1) == 0 && input(PIN_B2) == 1) {
            DERECHA();
        } 
        
        else if (input(PIN_B0) == 0 && input(PIN_B1) == 0 && input(PIN_B2) == 1) {
            DERECHA();
        } 
        
        else if (input(PIN_B0) == 1 && input(PIN_B1) == 0 && input(PIN_B2) == 0) {
            ADELANTE();
        } 
        
        else {
            ALTO();
        }
    } while (1); // El bucle se ejecutará indefinidamente

    return 0;
}

// Movimiento hacia adelante
void ADELANTE() {
    output_high(PIN_A0);
    output_high(PIN_A2);
    output_low(PIN_A1);
    output_low(PIN_A3);
}

// Giro a la izquierda
void DERECHA() {
    output_low(PIN_A0);
    output_high(PIN_A2);
    output_high(PIN_A1);
    output_low(PIN_A3);
    delay_ms(1); // Ajusta el tiempo de giro según sea necesario
}

// Giro a la derecha
void IZQUIERDA() {
    output_high(PIN_A0);
    output_low(PIN_A2);
    output_low(PIN_A1);
    output_high(PIN_A3);
    delay_ms(1); // Ajusta el tiempo de giro según sea necesario
}

// Detener motores
void ALTO() {
    output_low(PIN_A0);
    output_low(PIN_A2);
    output_low(PIN_A1);
    output_low(PIN_A3);
}
